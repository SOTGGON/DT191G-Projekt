@model List<Blogg.Models.BloggModel>

@{
    ViewData["Title"] = "Blogglista";
}

<div class="text-center">
    <h1 class="display-4">BloggLista</h1>
</div>

<form asp-controller="Home" asp-action="BloggList" method="get">
    <p>
        Search:
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
        <input type="submit" value="Search" />
    </p>
</form>

<!-- Lägg till-knapp för att visa inlägg av specifik författare -->
@foreach (var author in Model.Select(item => item.CreateBy).Distinct())
{
    <form asp-controller="Home" asp-action="FilterByAuthor" method="get">
        <input type="hidden" name="author" value="@author" />
        <button type="submit">Show Posts by @author</button>
    </form>
}

@if (Model != null)
{
    @foreach (var item in Model)
    {
        <article>
            <h2>@item.Title</h2>
            <p>@item.Content</p>
            <p>Skapad av: @item.CreateBy</p>
            <p>Datum: @item.PublishDate</p>
            <!-- Kontrollera om det finns bilder-->
            <p>
                @if (!string.IsNullOrEmpty(item.ImageName))
                {
                    @item.ImageName
                }
            </p>
            <p><a asp-action="Details" asp-route-id="@item.Id">Details</a></p>
        </article>
    }
}
else
{
    <p>No data available</p>
}

@section styles {
    <style>
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        input[type="submit"],
        button {
            background-color: #45a29e;
            border: none;
            color: white;
            padding: 8px 16px;
            text-decoration: none;
            cursor: pointer;
            border-radius: 4px;
        }

        input[type="text"] {
            width: 200px;
        }

        input[type="submit"]:hover,
        button:hover {
            background-color: #3f8580;
        }

        article {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-bottom: 20px;
            background-color: #f1f1f1;
        }

        article:hover {
            box-shadow: 0 8px 16px rgba(255, 255, 255, 0.7);
        }

        img {
            max-width: 100%;
            height: auto;
            margin-top: 10px;
        }
    </style>
}